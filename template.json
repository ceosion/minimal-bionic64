{
 "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/cleanup.sh"
    }
],
  "builders": [{
    "type": "virtualbox-iso",
    "boot_command": [
      "<enter><f6><esc>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
      "<bs><bs><bs><bs><bs>",
